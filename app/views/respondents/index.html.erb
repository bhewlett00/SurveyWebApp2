<h1>
	<large class="pl-3">
	Respndents View <%= pluralize(@surveys.count, "Survey") %>
	</large>
</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th scope="=col">Name</th>
			<th scope="=col">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @surveys.each do |survey| %>
		<tr>
			<td><%= survey.survey_name %></td>
			<td>
				<a href="/respondents/<%= survey.id %>">Respond</a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
