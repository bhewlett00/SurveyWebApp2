<h2>Create Questions </h2>
<form action="/questions/:id" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<div class="form-group col-md-6">
		<label for="question_text">Enter Question:</label>
    	<input type="text" class="form-control" name="question[question_text]">
    	<input type="hidden" class="form-control" name="question[survey_id]" value="<%= @survey.id %>">
		</div>
	</p>
	<input type="submit" value="Create">
</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %> 
